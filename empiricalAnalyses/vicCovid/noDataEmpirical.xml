<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<beast version="2.0"
       namespace="beast.core
                 :beast.core.util
                 :beast.core.parameter
                 :beast.evolution.likelihood
                 :beast.evolution.tree
                 :beast.evolution.tree.coalescent
                 :beast.evolution.sitemodel
                 :beast.evolution.substitutionmodel
                 :beast.evolution.operators
                 :beast.evolution.alignment
                 :bdmmprime.distribution
                 :bdmmprime.parameterization
                 :bdmmprime.trajectories.simulation
                 :bdmmprime.util.operators
                 :feast.simulation
                 :feast.fileio">

<alignment spec='feast.fileio.AlignmentFromFasta' fileName="$(STEM).fasta" id="alignment"/>

<map name="Uniform" >beast.math.distributions.Uniform</map>
<map name="Exponential" >beast.math.distributions.Exponential</map>
<map name="LogNormal" >beast.math.distributions.LogNormalDistributionModel</map>
<map name="Normal" >beast.math.distributions.Normal</map>
<map name="Beta" >beast.math.distributions.Beta</map>
<map name="Gamma" >beast.math.distributions.Gamma</map>
<map name="LaplaceDistribution" >beast.math.distributions.LaplaceDistribution</map>
<map name="prior" >beast.math.distributions.Prior</map>
<map name="InverseGamma" >beast.math.distributions.InverseGamma</map>
<map name="OneOnX" >beast.math.distributions.OneOnX</map>
    
<run id="mcmc" spec="MCMC" chainLength="50000000" sampleFromPrior="true">
  <state id="state" spec="State" storeEvery="5000">
    <stateNode id="finalSampleOffset" spec="RealParameter" value="0.01"/>

    <stateNode id="Tree" spec="beast.evolution.tree.RandomTree">
      <!-- <trait spec="feast.fileio.TraitSetFromTaxonSet" -->
      <!--        delimiter="_" -->
      <!--        everythingAfterLast="true" -->
      <!--        traitname="date-forward"> -->
      <!--   <taxa id="taxonSet" spec="TaxonSet" alignment="@alignment"/> -->
      <!-- </trait> -->
      <!-- <taxonset idref="taxonSet"/> -->

      <taxonset id="taxonSet" spec="TaxonSet" alignment="@alignment"/>
      
      <populationModel id="ConstantPopulation0" spec="ConstantPopulation">
        <parameter id="randomPopSize" spec="parameter.RealParameter" name="popSize">0.01</parameter>
      </populationModel>
    </stateNode>
    
    <!--  END LEO ADDED THIS: switched off traits so un-operated tips can have true date -->          
    
    <parameter id="clockRate" spec="parameter.RealParameter" name="stateNode">0.001</parameter>
    
    <parameter id="reproductiveNumber" spec="parameter.RealParameter" lower="0.0" name="stateNode" upper="Infinity">2.0</parameter>

    
    <!-- adding parms for emp analysis --> 
    <parameter id="becomeUninfectiousRate" spec="parameter.RealParameter" name="stateNode" lower="0.0" upper="Infinity">36.5</parameter>

    <parameter id="kappa.s" spec="parameter.RealParameter" lower="0.0" name="stateNode">2.0</parameter>
    
    <parameter id="gammaShape.s" spec="parameter.RealParameter" name="stateNode">1.0</parameter>

    <!--TEST -->
    <parameter id="origin" spec="parameter.RealParameter" lower="0.0" name="stateNode" upper="Infinity">$(ORIGIN)</parameter>
    
  </state>
  
            
  <distribution id="posterior" spec="util.CompoundDistribution">
    
    <distribution id="prior" spec="util.CompoundDistribution">
      <distribution id="BDSKY_Serial"
                    spec="bdmmprime.distribution.BirthDeathMigrationDistribution"
                    tree="@Tree">

        <finalSampleOffset idref="finalSampleOffset"/>

        <parameterization spec="EpiParameterization"
                          origin="@origin">
          <R0 spec="SkylineVectorParameter">
            <skylineValues idref="reproductiveNumber"/>
          </R0>
          <becomeUninfectiousRate spec="SkylineVectorParameter">
            <skylineValues idref="becomeUninfectiousRate"/>
          </becomeUninfectiousRate>

          <samplingProportion spec="SkylineVectorParameter">
            <skylineValues id="samplingProportion"
                           spec="parameter.RealParameter"
                           value="0.8"/>
          </samplingProportion>
          
          <removalProb spec="SkylineVectorParameter">
            <skylineValues spec="RealParameter" value="1.0"/>
          </removalProb>
        </parameterization>
        
      </distribution>
      
      <prior id="originPrior" name="distribution" x="@origin">
        <Exponential id="expon1" name="distr" offset="0.142" mean="0.019"/>
      </prior>
      
      <prior id="reproductiveNumberPrior" name="distribution" x="@reproductiveNumber">
        <LogNormal id="LogNormalDistributionModel.3" name="distr"
                   M="0.0" S="1.0"/>
      </prior>

      <prior id="becomeUninfectiousRatePrior" name="distribution" x="@becomeUninfectiousRate">
        <InverseGamma id="InverseGamma.1" name="distr">
          <parameter id="RealParameter.13" spec="parameter.RealParameter" estimate="false" name="alpha">5.807</parameter>
          
          <parameter id="RealParameter.14" spec="parameter.RealParameter" estimate="false" name="beta">346.020</parameter>
        </InverseGamma>                
      </prior>

      <prior id="GammaShapePrior.s" name="distribution" x="@gammaShape.s">
        <Exponential id="Exponential.0" name="distr">
          <parameter id="RealParameter.0" spec="parameter.RealParameter" estimate="false" name="mean">1.0</parameter>
        </Exponential>
        
      </prior>
      
      <prior id="KappaPrior.s" name="distribution" x="@kappa.s">
        <LogNormal id="LogNormalDistributionModel.0" name="distr">
          <parameter id="RealParameter.1" spec="parameter.RealParameter" estimate="false" name="M">1.0</parameter>
          <parameter id="RealParameter.2" spec="parameter.RealParameter" estimate="false" name="S">1.25</parameter>
        </LogNormal>
        
      </prior>

    </distribution>
                    
    <distribution id="likelihood" spec="util.CompoundDistribution" useThreads="true">
      <distribution id="treeLikelihood" spec="ThreadedTreeLikelihood" data="@alignment" tree="@Tree">
        <siteModel id="SiteModel" spec="SiteModel" gammaCategoryCount="4" shape="@gammaShape.s">
          
          <parameter id="mutationRate" spec="parameter.RealParameter" estimate="false" name="mutationRate">1.0</parameter>
          
          <!-- Commented out to use prior on gamma shape parameter -->
          <!--parameter id="gammaShape" spec="parameter.RealParameter" estimate="false" name="shape">1.0</parameter-->
          
          <parameter id="proportionInvariant" spec="parameter.RealParameter" estimate="false" lower="0.0" name="proportionInvariant" upper="1.0">0.0</parameter>
          
          <substModel id="hky.s:" spec="HKY" kappa="@kappa.s">
            
            <frequencies id="empiricalFreqs.s" spec="Frequencies" data="@alignment"/>
            
          </substModel>
        </siteModel>

        <branchRateModel id="StrictClock" spec="beast.evolution.branchratemodel.StrictClockModel" clock.rate="@clockRate"/>
      </distribution>
    </distribution>
  </distribution>
            

  <operator id="TreeScaler" spec="ScaleOperator" scaleFactor="0.5" tree="@Tree" weight="3.0"/>
  <operator id="TreeRootScaler" spec="ScaleOperator" rootOnly="true" scaleFactor="0.5" tree="@Tree" weight="3.0"/>
  <operator id="UniformOperator" spec="Uniform" tree="@Tree" weight="30.0"/>
  <operator id="SubtreeSlide" spec="SubtreeSlide" tree="@Tree" weight="15.0"/>
  <operator id="Narrow" spec="Exchange" tree="@Tree" weight="15.0"/>
  <operator id="Wide" spec="Exchange" isNarrow="false" tree="@Tree" weight="3.0"/>
  <operator id="WilsonBalding" spec="WilsonBalding" tree="@Tree" weight="3.0"/>
  
  <operator id="reproductiveNumberScaler" spec="ScaleOperator" parameter="@reproductiveNumber" weight="10.0"/>


  <operator id="becomeUninfectiousRateScaler" spec="ScaleOperator" parameter="@becomeUninfectiousRate" weight="1.0"/>

  <operator id="KappaScaler.s" spec="ScaleOperator" parameter="@kappa.s" scaleFactor="0.5" weight="0.1"/>
            
  <operator id="gammaShapeScaler.s" spec="ScaleOperator" parameter="@gammaShape.s" scaleFactor="0.5" weight="0.1"/>

  <operator spec="ScaleOperator" parameter="@finalSampleOffset" weight="1.0"/>
  <operator spec="ScaleOperator" parameter="@origin" weight="5.0"/>   

  <operator spec="TipDateOperator" tree="@Tree"
            finalSampleOffset="@finalSampleOffset" weight="15.0"
            windowSize="0.1">
    <taxonSet idref="taxonSet"/>
  </operator>

  <operator spec="TipEdgeScaleOperator" tree="@Tree"
            finalSampleOffset="@finalSampleOffset" weight="15.0"
            scaleFactor="0.5">
    <taxonSet idref="taxonSet"/>
  </operator>



  <logger id="tracelog" spec="Logger" fileName="noData$(STEM).log" logEvery="10000" model="@posterior" sanitiseHeaders="true" sort="smart">
    
    <log idref="posterior"/>
    
    <log idref="likelihood"/>
    
    <log idref="prior"/>
    
    <log idref="treeLikelihood"/>
    
    <log spec="beast.evolution.tree.TreeStatLogger" logHeight="true" logLength="true" tree="@Tree"/>
    
    <log idref="BDSKY_Serial"/>
    
    <log idref="reproductiveNumber"/>
    <!--  START LEO ADDED THIS -->
    <log idref="finalSampleOffset"/>

    <log idref="origin"/>

    <log idref="becomeUninfectiousRate"/>

    <log idref="kappa.s"/>
    
    <log idref="gammaShape.s"/>
    <!--  END LEO ADDED THIS -->
  </logger>
  
  <logger id="screenlog" spec="Logger" logEvery="10000">
    
    <log idref="posterior"/>

    <log idref="clockRate"/>
    
    <log idref="likelihood"/>
    
    <log idref="prior"/>

    <log idref="finalSampleOffset"/>

    <log idref="origin"/>
    
  </logger>
  
  <logger id="treelog" spec="Logger" fileName="noData$(STEM).trees" logEvery="10000" mode="tree">
    <!-- <log id="TreeWithMetaDataLogger" spec="beast.evolution.tree.TreeWithMetaDataLogger" tree="@Tree"/> -->
    <log idref="Tree"/>
  </logger>
  
  <operatorschedule id="OperatorSchedule" spec="OperatorSchedule"/>
  
</run>
    
</beast>
